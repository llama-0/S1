<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EnterNameActivity"
    android:id="@+id/content_main">

    <EditText
        android:id="@+id/edEnterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:hint="@string/enter_your_name"
        style="@style/edStyle"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/btnStyle"
        app:layout_constraintEnd_toEndOf="@+id/edEnterName"
        app:layout_constraintStart_toStartOf="@+id/edEnterName"
        app:layout_constraintTop_toBottomOf="@+id/edEnterName" />

</androidx.constraintlayout.widget.ConstraintLayout>